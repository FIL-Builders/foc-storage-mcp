{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib": ["./src/lib"],
      "@/lib/*": ["./src/lib/*"],
      "@/types": ["./src/types"],
      "@/types/*": ["./src/types/*"],
      "@/config": ["./src/config"],
      "@/config/*": ["./src/config/*"],
      "@/services": ["./src/services"],
      "@/services/*": ["./src/services/*"],
      "@/mastra/*": ["./src/mastra/*"]
    }
  },
  "include": ["src/**/*"]
}
